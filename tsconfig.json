{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022"],

    "allowSyntheticDefaultImports": true,
    "module": "ES2022",
    "moduleResolution": "Node",
    "types": ["node"],

    "rootDir": "./src",
    "baseUrl": "./",
    "outDir": "lib",
    "paths": {
      "src/*": ["./src/*"]
    },

    "isolatedModules": true,
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "sourceMap": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
